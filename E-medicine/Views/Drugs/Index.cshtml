@model IEnumerable<E_medicine.Models.Drugs>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/pom.cshtml";
}
<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.First().image)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                    <th>@Html.DisplayNameFor(model => model.First().DosageForm)</th>
                     <th>@Html.DisplayNameFor(model => model.First().Strenght)</th>
                      <th>@Html.DisplayNameFor(model => model.First().DisaseDrugs)</th>
                  
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td class="align-middle">
                        <img class="rounded-circle" src="~/images/@item.image" alt="@item.Name" style="max-width: 150px" />
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.DosageForm)
                    </td>
                     <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Strenght)
                    </td>
                    <td class="align-middle">
                           <a asp-controller="Cards" asp-action="AddtoCard" asp-route-id="@item.Id"><i class="fa fa-shopping-cart fa-3x" aria-hidden="true"></i></a>

                    </td>
                   
                    <td>
                      
                        @foreach (var disase in item.DisaseDrugs)
                        {
                           @disase.Disase.Name
                        }
                        </td>
                </tr>
                }
            </tbody>

        </table>

    </div>
</div>

