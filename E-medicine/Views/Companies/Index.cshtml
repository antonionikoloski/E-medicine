@model IEnumerable<E_medicine.Models.Company>

@{
    ViewData["Title"] = "Index";
}


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Name
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="~/images/@item.image" width="100%" alt="@item.Name">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text"> <b>Number of employes:</b> @item.num_empl</p>
                            <p class="card-text"><b>Country of origin: </b>@item.country</p>
                            <p class="card-text "> 
                            
                                 
                            </p>

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-controller="Drugs" asp-action="Index" >
                                    <i class="bi bi-eye-fill"></i> Show available drugs
                                </a>
                                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" class="btn btn-outline-primary float-right" asp-route-id="@item.Id">Edit</a> 

                                    <a asp-action="Delete" class="btn btn-outline-primary float-right" asp-route-id="@item.Id">Delete</a>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>